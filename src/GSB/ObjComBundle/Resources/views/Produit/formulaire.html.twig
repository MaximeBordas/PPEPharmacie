{% block title %}

{% endblock %}

{% block gsbobjcom_body %}
    <form method="post">
        <p>
        <div class="form-group">
            <label class="control-label col-sm-2" for="libelle">Libelle:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="libelle" name="libelle" {% if leProd.id is defined  %} value="{{ leProd.libelle }}" {% endif %} placeholder="Libelle du produit">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="prix">prix:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="prix" name="prix" {% if leProd.id is defined  %} value="{{ leProd.prix }}" {% endif %} placeholder="prix en euros du produit">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox" name="isSold">
                    <label> <input type="checkbox" name="isSold"{% if leProd.id is defined %} {%  if leProd.isSold == 1 %} checked  {% endif %} {% endif %}> est vendu </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btndefault"> Valider </button>
            </div>
        </div>
        </p>
    </form>
{% endblock %}