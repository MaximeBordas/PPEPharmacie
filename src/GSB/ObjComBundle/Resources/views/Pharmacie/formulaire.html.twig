{% block title %}

{% endblock %}

{% block gsbobjcom_body %}
	<form method="post">
	<p>
	<div class="form-group">
		<label class="control-label col-sm-2" for="nom">nom:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="nom" name="nom" {% if laPharm.id is defined  %} value="{{ laPharm.nom }}" {% endif %} placeholder="nom de la pharmacie">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="ville">ville:</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="ville" name="ville" {% if laPharm.id is defined  %} value="{{ laPharm.ville }}" {% endif %} placeholder="nom de la ville où est située la pharmacie">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox" name="client">
				<label> <input type="checkbox" name="client"{% if laPharm.id is defined %} {%  if laPharm.client == 1 %} checked  {% endif %} {% endif %}> Client </label>
			</div>
		</div>
	</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="url">Url de l'image : </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="url" name="url"  {% if laPharm.image.id is defined %}value="{{ laPharm.image.url }}" {% endif %} placeholder="url de l'image à associer à la pharmacie">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="alt">Alt : </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="alt" name="alt" {% if laPharm.image.id is defined %}value="{{ laPharm.image.alt }}" {% endif %} placeholder="alt de l'image à associer à la pharmacie">
			</div>
		</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btndefault"> Valider </button>
		</div>
	</div>
    </p>
	</form>
{% endblock %}